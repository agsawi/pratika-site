---
// Test component to verify Tailwind integration with custom colors
---

<div class="p-8 space-y-6">
  <h2 class="text-2xl font-bold text-text mb-4">Visual Customization System Test</h2>
  
  <!-- Brand Colors Test -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-text">Brand Colors</h3>
    <div class="flex gap-4">
      <div class="bg-primary text-white p-4 rounded-lg">
        <p class="font-medium">Primary Color</p>
        <p class="text-sm opacity-90">bg-primary</p>
      </div>
      <div class="bg-secondary text-white p-4 rounded-lg">
        <p class="font-medium">Secondary Color</p>
        <p class="text-sm opacity-90">bg-secondary</p>
      </div>
      <div class="bg-accent text-white p-4 rounded-lg">
        <p class="font-medium">Accent Color</p>
        <p class="text-sm opacity-90">bg-accent</p>
      </div>
    </div>
  </div>

  <!-- UI Colors Test -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-text">UI Colors</h3>
    <div class="bg-surface border border-border rounded-lg p-4 space-y-2">
      <p class="text-text">Primary text color (text-text)</p>
      <p class="text-text-muted">Muted text color (text-text-muted)</p>
      <div class="flex gap-2 mt-4">
        <span class="bg-success text-white px-3 py-1 rounded text-sm">Success</span>
        <span class="bg-warning text-white px-3 py-1 rounded text-sm">Warning</span>
        <span class="bg-error text-white px-3 py-1 rounded text-sm">Error</span>
        <span class="bg-info text-white px-3 py-1 rounded text-sm">Info</span>
      </div>
    </div>
  </div>

  <!-- Theme Toggle Test -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-text">Theme Toggle Test</h3>
    <p class="text-text-muted">Use the existing theme toggle to test dark mode colors.</p>
    
    <!-- HSThemeAppearance compatible button -->
    <button 
      type="button" 
      class="hs-dark-mode-active:hidden block bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg transition-colors"
      data-hs-theme-click-value="dark"
    >
      Switch to Dark Mode
    </button>
    
    <button 
      type="button" 
      class="hs-dark-mode-active:block hidden bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-lg transition-colors"
      data-hs-theme-click-value="light"
    >
      Switch to Light Mode
    </button>
  </div>

  <!-- Typography Test -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-text">Typography</h3>
    <div class="space-y-2">
      <p class="font-sans text-text">Sans-serif font family (font-sans)</p>
      <p class="font-serif text-text">Serif font family (font-serif)</p>
      <p class="font-mono text-text">Monospace font family (font-mono)</p>
    </div>
  </div>

  <!-- Spacing and Border Radius Test -->
  <div class="space-y-4">
    <h3 class="text-lg font-semibold text-text">Spacing & Border Radius</h3>
    <div class="flex gap-4">
      <div class="bg-surface border border-border p-2 rounded-sm">
        <p class="text-sm text-text">Small radius</p>
      </div>
      <div class="bg-surface border border-border p-4 rounded-md">
        <p class="text-sm text-text">Medium radius</p>
      </div>
      <div class="bg-surface border border-border p-6 rounded-lg">
        <p class="text-sm text-text">Large radius</p>
      </div>
    </div>
  </div>
</div>

