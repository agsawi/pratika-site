---
// Test Register Modal with custom colors and unique IDs
const config = {
  id: "test-register-modal",
  title: "Sign up",
  subTitle: "Already have an account?",
  loginBtn: "Sign in here",
  loginBtnDataHS: "#test-login-modal",
};
---

<div
  id={config.id}
  class="hs-overlay absolute start-0 top-0 z-50 hidden h-full w-full hs-overlay-backdrop-open:bg-neutral-900/90"
>
  <div
    class="m-3 mt-0 opacity-0 transition-all ease-out hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 sm:mx-auto sm:w-full sm:max-w-lg"
  >
    <div class="mx-auto w-full max-w-md p-6">
      <div
        class="mt-7 rounded-xl border border-border bg-surface shadow-lg dark:border-border dark:bg-surface"
      >
        <!-- Close button -->
        <div class="flex justify-end p-4 pb-0">
          <button
            type="button"
            class="flex h-7 w-7 items-center justify-center rounded-full border border-transparent text-sm font-semibold text-text-muted hover:bg-background hover:text-text disabled:pointer-events-none disabled:opacity-50"
            data-hs-overlay={`#${config.id}`}
          >
            <span class="sr-only">Close</span>
            <svg
              class="h-4 w-4 flex-shrink-0"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m18 6-12 12"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>
        
        <div class="p-4 pt-0 sm:p-7 sm:pt-0">
          <div class="text-center">
            <div
              class="block text-2xl font-bold text-text"
              role="heading"
              aria-level="1"
              aria-label={config.title}
            >
              {config.title}
            </div>
            <p class="mt-2 text-sm text-text-muted">
              {config.subTitle}
              <button
                class="rounded-lg p-1 font-medium text-primary decoration-2 outline-hidden ring-zinc-500 hover:underline focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden"
                data-hs-overlay={config.loginBtnDataHS}
              >
                {config.loginBtn}
              </button>
            </p>
          </div>
          <div class="mt-5">
            <button
              type="button"
              class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-border bg-background text-text shadow-sm hover:bg-surface disabled:opacity-50 disabled:pointer-events-none"
            >
              <svg class="w-4 h-auto" width="46" height="47" viewBox="0 0 46 47" fill="none">
                <path d="M46 24.0287C46 22.09 45.8533 20.68 45.5013 19.2112H23.4694V27.9356H36.4069C36.1429 30.1094 34.7347 33.37 31.5957 35.5731L31.5663 35.8669L38.5191 41.2719L38.9885 41.3306C43.4477 37.2181 46 31.1669 46 24.0287Z" fill="#4285F4"/>
                <path d="M23.4694 47C29.8061 47 35.1161 44.9144 39.0179 41.3012L31.625 35.5437C29.6301 36.9244 26.9898 37.8937 23.4987 37.8937C17.2793 37.8937 12.0281 33.7812 10.1505 28.1412L9.88649 28.1706L2.61097 33.7812L2.52296 34.0456C6.36608 41.7125 14.287 47 23.4694 47Z" fill="#34A853"/>
                <path d="M10.1212 28.1413C9.62245 26.6725 9.32908 25.1156 9.32908 23.5C9.32908 21.8844 9.62245 20.3275 10.0918 18.8588V18.5356L2.75765 12.8369L2.52296 12.9544C0.909439 16.1269 0 19.7106 0 23.5C0 27.2894 0.909439 30.8731 2.49362 34.0456L10.1212 28.1413Z" fill="#FBBC05"/>
                <path d="M23.4694 9.07688C27.8699 9.07688 30.8622 10.9863 32.5344 12.5725L39.1645 6.11C35.0867 2.32063 29.8061 0 23.4694 0C14.287 0 6.36607 5.2875 2.49362 12.9544L10.0918 18.8588C11.9987 13.1894 17.25 9.07688 23.4694 9.07688Z" fill="#EB4335"/>
              </svg>
              Sign up with Google
            </button>

            <div
              class="flex items-center py-3 text-xs uppercase text-text-muted before:me-6 before:flex-[1_1_0%] before:border-t before:border-border after:ms-6 after:flex-[1_1_0%] after:border-t after:border-border"
            >
              Or
            </div>
            
            <form>
              <div class="grid gap-y-4">
                <div>
                  <label for="test-register-email" class="block text-sm font-medium text-text mb-2">Email address</label>
                  <input type="email" id="test-register-email" name="test-register-email" class="py-3 px-4 block w-full border border-border rounded-lg text-sm text-text bg-background focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none" required aria-describedby="test-register-email-error">
                  <p class="hidden text-xs text-error mt-2" id="test-register-email-error">Please include a valid email address so we can get back to you</p>
                </div>
                
                <div>
                  <label for="test-create-password" class="block text-sm font-medium text-text mb-2">Password</label>
                  <input type="password" id="test-create-password" name="test-create-password" class="py-3 px-4 block w-full border border-border rounded-lg text-sm text-text bg-background focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none" required aria-describedby="test-create-password-error">
                  <p class="hidden text-xs text-error mt-2" id="test-create-password-error">8+ characters required</p>
                </div>
                
                <div>
                  <label for="test-confirm-password" class="block text-sm font-medium text-text mb-2">Confirm Password</label>
                  <input type="password" id="test-confirm-password" name="test-confirm-password" class="py-3 px-4 block w-full border border-border rounded-lg text-sm text-text bg-background focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none" required aria-describedby="test-confirm-password-error">
                  <p class="hidden text-xs text-error mt-2" id="test-confirm-password-error">Password does not match the password</p>
                </div>
                
                <div class="flex items-center">
                  <input id="test-terms-agree" name="test-terms-agree" type="checkbox" class="shrink-0 mt-0.5 border-border rounded text-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none">
                  <label for="test-terms-agree" class="text-sm text-text ms-3">I accept the <a class="text-primary decoration-2 hover:underline font-medium" href="#">Terms and Conditions</a></label>
                </div>
                
                <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-primary text-white hover:bg-primary/90 disabled:opacity-50 disabled:pointer-events-none">Sign up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>