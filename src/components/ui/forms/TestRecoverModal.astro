---
// Test Recover Modal with custom colors and unique IDs
const config = {
  id: "test-recover-modal",
  title: "Forgot password?",
  subTitle: "Remember your password?",
  loginBtn: "Sign in here",
  loginBtnDataHS: "#test-login-modal",
};
---

<div
  id={config.id}
  class="hs-overlay absolute start-0 top-0 z-50 hidden h-full w-full hs-overlay-backdrop-open:bg-neutral-900/90"
>
  <div
    class="m-3 mt-0 opacity-0 transition-all ease-out hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 sm:mx-auto sm:w-full sm:max-w-lg"
  >
    <div class="mx-auto w-full max-w-md p-6">
      <div
        class="mt-7 rounded-xl border border-border bg-surface shadow-lg dark:border-border dark:bg-surface"
      >
        <!-- Close button -->
        <div class="flex justify-end p-4 pb-0">
          <button
            type="button"
            class="flex h-7 w-7 items-center justify-center rounded-full border border-transparent text-sm font-semibold text-text-muted hover:bg-background hover:text-text disabled:pointer-events-none disabled:opacity-50"
            data-hs-overlay={`#${config.id}`}
          >
            <span class="sr-only">Close</span>
            <svg
              class="h-4 w-4 flex-shrink-0"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m18 6-12 12"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>
        
        <div class="p-4 pt-0 sm:p-7 sm:pt-0">
          <div class="text-center">
            <div
              class="block text-2xl font-bold text-text"
              role="heading"
              aria-level="1"
              aria-label={config.title}
            >
              {config.title}
            </div>
            <p class="mt-2 text-sm text-text-muted">
              {config.subTitle}
              <button
                class="rounded-lg p-1 font-medium text-primary decoration-2 outline-hidden ring-zinc-500 hover:underline focus-visible:ring-3 dark:ring-zinc-200 dark:focus:outline-hidden"
                data-hs-overlay={config.loginBtnDataHS}
              >
                {config.loginBtn}
              </button>
            </p>
          </div>
          <div class="mt-5">
            <form>
              <div class="grid gap-y-4">
                <div>
                  <label for="test-recover-email" class="block text-sm font-medium text-text mb-2">Email address</label>
                  <input type="email" id="test-recover-email" name="test-recover-email" class="py-3 px-4 block w-full border border-border rounded-lg text-sm text-text bg-background focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none" required aria-describedby="test-recover-email-error">
                  <p class="hidden text-xs text-error mt-2" id="test-recover-email-error">Please include a valid email address so we can get back to you</p>
                </div>
                
                <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-primary text-white hover:bg-primary/90 disabled:opacity-50 disabled:pointer-events-none">Reset password</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>