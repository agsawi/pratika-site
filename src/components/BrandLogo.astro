---
// Import Pratika logo variants as raw SVG
import logoDarkBg from "@images/logo_pratika_facilities_fundo_escuro_transparente.svg?raw";
import logoLightBg from "@images/logo_pratika_facilities_fundo_claro_transparente.svg?raw";

// Get the class prop and merge with default classes
const { class: className, ...otherProps } = Astro.props;
const baseClasses = "h-auto w-32"; // Default sizing from original navbar
const lightClasses = `block dark:hidden ${baseClasses} ${className || ''}`;
const darkClasses = `hidden dark:block ${baseClasses} ${className || ''}`;
---

<!-- Light mode: use white background logo -->
<div class={lightClasses} {...otherProps} set:html={logoLightBg}></div>
<!-- Dark mode: use dark blue background logo -->
<div class={darkClasses} {...otherProps} set:html={logoDarkBg}></div>

<style>
  /* Ensure SVG elements inherit the container size */
  div :global(svg) {
    width: 100%;
    height: 100%;
  }

</style>
