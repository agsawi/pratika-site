---
interface Props { title?: string; description?: string }
const { title = 'Contact us', description = '' } = Astro.props as Props;
---
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
  <h2 class="mb-3 text-2xl font-bold">{title}</h2>
  {description && <p class="mb-6 text-neutral-600 dark:text-neutral-300">{description}</p>}
  <form class="grid gap-4 sm:grid-cols-2">
    <input class="rounded-lg border border-neutral-300 p-3 sm:col-span-1 dark:border-neutral-700" placeholder="Name" />
    <input class="rounded-lg border border-neutral-300 p-3 sm:col-span-1 dark:border-neutral-700" placeholder="Email" />
    <textarea class="rounded-lg border border-neutral-300 p-3 sm:col-span-2 dark:border-neutral-700" rows={5} placeholder="Message" />
    <button type="submit" class="inline-flex items-center justify-center rounded-lg bg-neutral-900 px-5 py-3 text-white hover:bg-neutral-800 dark:bg-neutral-100 dark:text-neutral-900 sm:col-span-2">Send</button>
  </form>
</section>

